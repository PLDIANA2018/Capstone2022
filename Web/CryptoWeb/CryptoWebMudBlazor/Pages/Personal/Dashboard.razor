        </MudPaper>
    </MudItem>*@
    <MudItem xs="12" sm="12" md="6">
        <MudCard Style="height:100%;">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Monthly Balances</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent Class="px-0">
                <MudSimpleTable Elevation="0" Hover="true">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th>End Balance</th>
                            <th>Differential</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in earningReports.OrderBy(x => x.Name))
                            {
                            <tr>
                                <td>
                                    <div class="d-flex flex-row">
                                        @*<MudAvatar Image="@report.Avatar" Class="mud-elevation-25" />*@
                                        <div class="ml-6">
                                            <MudText Typo="Typo.subtitle2">@report.Name</MudText>
                                            @*<MudText Typo="Typo.body2">@reportmonthBalance.</MudText>*@
                                        </div>
                                    </div>
                                </td>
                                <td><MudChip Label="true" Color="Color.Success" Size="Size.Small" Class="ml-auto mud-elevation-25">@report.monthBalance</MudChip></td>
                                <td><MudText>@report.monthDifference</MudText></td>
                            </tr>
                            }
                    </tbody>
                </MudSimpleTable>
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="12" md="6">
        <MudCard Style="height:100%;">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">In The News...</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent Class="px-0">
                <MudList Clickable="true">
                    <MudListItem>
                        <div class="d-flex flex-row">
                            <MudAvatar Class="mud-elevation-25">
                                <MudIcon Icon="@Icons.Filled.NewReleases" Class="mx-4" />
                            </MudAvatar>
                            <div class="ml-6">
                                <MudLink Href="https://news.bitcoin.com/japanese-fintech-firm-kyash-raises-41-million-jack-dorseys-block-participates-in-funding/">Japanese Fintech Firm Kyash Raises $41 Million, Jack Dorsey’s Block Participates in Funding</MudLink>
                            </div>
                        </div>
                    </MudListItem>
                    <MudListItem>
                        <div class="d-flex flex-row">
                            <MudAvatar Class="mud-elevation-25">
                                <MudIcon Icon="@Icons.Filled.NewReleases" Class="mx-4" />
                            </MudAvatar>
                            <div class="ml-6">
                                <MudLink Href="https://www.cnbc.com/video/2022/03/18/its-difficult-for-russian-oligarchs-to-use-crypto-says-ftx-ceo-sam-bankman-fried.html">It’s difficult for Russian oligarchs to use crypto, says FTX CEO Sam Bankman-Fried</MudLink>
                            </div>
                        </div>
                    </MudListItem>
                    <MudListItem>
                        <div class="d-flex flex-row">
                            <MudAvatar Class="mud-elevation-25">
                                <MudIcon Icon="@Icons.Filled.NewReleases" Class="mx-4" />
                            </MudAvatar>
                            <div class="ml-6">
                                <MudLink Href="https://finance.yahoo.com/m/787023fe-e662-374c-94e5-e1204f1c5aac/how-investors-can-keep-crypto.html">How Investors Can Keep Crypto Assets Safe</MudLink>
                            </div>
                        </div>
                    </MudListItem>
                </MudList>
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

