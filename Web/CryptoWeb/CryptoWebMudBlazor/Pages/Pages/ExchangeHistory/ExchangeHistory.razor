@page "/pages/exchangehistory"
@using Models

<MudBreadcrumbs Items="_items"></MudBreadcrumbs>

<MudTable Items="@_exchanges">
    <HeaderContent>
        <MudTh>Account Name</MudTh>
        <MudTh>Key</MudTh>
        <MudTh>Auto Liquidate</MudTh>
        <MudTh>Active Strategy Count</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.AccountName</MudTd>
        <MudTd>@context.Key</MudTd>
        <MudTd>@context.AutoLiquidate</MudTd>
        <MudTd>@context.StrategyList.Count</MudTd>
    </RowTemplate>

</MudTable> 

