@code {

    private List<BreadcrumbItem> _items = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/personal/dashboard"),
        new BreadcrumbItem("Exchange History", href: "/pages/exchangehistory"),
    };

    private IEnumerable<ExchangeInstance> _exchanges = new List<ExchangeInstance>();

    protected override async Task OnInitializedAsync()
    {
        _exchanges = new List<ExchangeInstance>()
        {
            new ExchangeInstance()
            {
                AccountName = "TestAccount",
                Key = "TestKey",
                AutoLiquidate = false,
                StrategyList = new List<StrategyInstance> ()
                {
                    new StrategyInstance()
                    {
                        AutoLiquidate = false
                    }
                }
            }
        };
    }
}

